var arisey = require('../dist').default;

function exit() {
	return arisey.exec('exit');
}

function runCommand() {
	var command = process.argv
		.slice(2)
		.join(' ');

	return arisey
		.exec(command)
		.then(exit);
}

module.exports = process.argv.length > 2
	? runCommand()
	: arisey;
